            key-positions = <8 7>;
        };

        S9L {
            bindings = <&kp HASH>;
            key-positions = <12 11>;
        };

        S9R {
            bindings = <&kp EXCLAMATION>;
            key-positions = <18 17>;
        };

        S10L {
            bindings = <&kp DOLLAR>;
            key-positions = <21 22>;
        };

        S10R {
            bindings = <&kp AT_SIGN>;
