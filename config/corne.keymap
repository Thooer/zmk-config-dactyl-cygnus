#include <dt-bindings/zmk/mouse.h>
#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

#define DEFAULT 0
#define SYM     1
#define NAV     2
#define NUM     3
#define WIN     4
#define MSE     5

/ {
    combos {
        compatible = "zmk,combos";

        Win {
            bindings = <&kp LEFT_WIN>;
            key-positions = <34 31>;
            timeout-ms = <20>;
        };

        G_DMode {
            bindings = <&mo 4>;
            key-positions = <8 7 6>;
        };

        S1-L {
            bindings = <&kp LEFT_PARENTHESIS>;
            key-positions = <3 13>;
        };

        S1-R {
            bindings = <&kp RIGHT_PARENTHESIS>;
            key-positions = <16 6>;
        };

        S2-L {
            bindings = <&kp LEFT_BRACE>;
            key-positions = <4 14>;
        };

        S2R {
            bindings = <&kp RIGHT_BRACE>;
            key-positions = <15 5>;
        };

        S3-L {
            bindings = <&kp LEFT_BRACKET>;
            key-positions = <12 2>;
        };

        S3-R {
            bindings = <&kp RIGHT_BRACKET>;
            key-positions = <17 7>;
        };

        S4-L {
            bindings = <&kp LESS_THAN>;
            key-positions = <11 1>;
        };

        S4-R {
            bindings = <&kp GREATER_THAN>;
            key-positions = <18 8>;
        };

        S5L {
            bindings = <&kp PLUS>;
            key-positions = <23 13>;
        };

        S5R {
            bindings = <&kp MINUS>;
            key-positions = <16 26>;
        };

        S6L {
            bindings = <&kp ASTERISK>;
            key-positions = <12 22>;
        };

        S6R {
            bindings = <&kp PERCENT>;
            key-positions = <27 17>;
        };

        S7L {
