        S11R {
            bindings = <&kp DOUBLE_QUOTES>;
            key-positions = <18 28>;
        };

        Tab {
            bindings = <&kp TAB>;
            key-positions = <23 22>;
        };

        Enter {
            bindings = <&kp ENTER>;
            key-positions = <27 26>;
        };

        Delete {
            bindings = <&kp DEL>;
            key-positions = <32 33>;
        };
